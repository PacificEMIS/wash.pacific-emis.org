nav{
  background-color: transparent;
  box-shadow: none;
  padding: 25px 0;
  height: auto;
  @extend .ease-animation;
  ul{
    li{
      a{
        font-weight: 400;
        font-size: 1.1em;
        &:hover{
          background-color: transparent !important;
          color: $accent-color;
        }
        &:active{
          color: $accent-color;
        }
        .active{
          color: $accent-color;
        }
      }
    }
  }
  .brand-logo{
    width: 80px;
    height: auto;
    padding: 12px 0 13px 0;
  }
}

.nav-collapse{
  padding: 0;
  background-color: $navbar-background;
  box-shadow: $navigation-box-shadow;
  a{
    color: $font-color;
    &:hover{
      background-color: transparent;
      color: $accent-color;
    }
    &:active{
      color: $accent-color;
    }
  }
}

.sidenav{
  background: linear-gradient(120deg, darken($primary-color, 10%) 0%, lighten($primary-color, 10%) 75%);
  img.logo{
    padding: 50px 50px 25px 50px;
  }
  li{
    a{
      color: #ffffff;
    }
  }
}
